<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.altb.musicapp.Fragments.ShowMusic">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Shuffle All"
            android:id="@+id/playAll"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:elevation="5dp"
            android:drawableStart="@drawable/triangle"
            android:textAllCaps="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playAll">
            <include layout="@layout/content_listview"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
