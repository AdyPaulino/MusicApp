<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:startColor="#003000"
        android:centerColor="#006000"
        android:endColor="#003000"
        android:angle="270" />
    <corners android:radius="40dp"/> // if you want clear round shape then make radius size is half of your  button`s height.
    <solid android:color="#F44F4F"/> // Button Colour
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"/>
    <stroke android:width="2px" android:color="#FFFFFF" />

</shape>